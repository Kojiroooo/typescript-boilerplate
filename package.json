{
  "name": "typescript_boilerplate",
  "version": "1.0.0",
  "scripts": {
    "dev": "ts-node-dev --respawn -r tsconfig-paths/register --debug --exit-child ./src/server.ts",
    "build": "tsc",
    "test": "NODE_ENV=test jest --verbose --silent --runInBand --forceExit",
    "test:watch": "NODE_ENV=test jest --watchAll --verbose --silent --runInBand --forceExit",
    "migration:create": "yarn prisma migrate dev --create-only --preview-feature",
    "migration:up": "yarn prisma migrate dev --preview-feature",
    "schema:generate": "yarn prisma generate",
    "migration:status": "yarn prisma migrate status",
    "migration:down:1": "yarn prisma migrate down --experimental",
    "tsc": "tsc",
    "ts-node": "ts-node -r tsconfig-paths/register",
    "dotenv": "dotenv"
  },
  "dependencies": {
    "@prisma/client": "3.11.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/supertest": "^2.0.11",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "http": "^0.0.1-security",
    "supertest": "^6.2.2",
    "ts-node": "^10.1.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "jest": "^27.0.6",
    "prisma": "^3.4.1",
    "ts-jest": "^27.0.4",
    "tsconfig-paths": "^3.10.1"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "setupFilesAfterEnv": [
      "./__tests__/supports/setup_jest.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/config/",
      "__tests__/support",
      "__tests__/factories"
    ],
    "moduleNameMapper": {
      "^@/(.+)": "<rootDir>/src/$1",
      "^__tests__/(.+)": "<rootDir>/__tests__/$1"
    }
  }
}
